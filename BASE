<div class="container">
  <h1>üéØ Jogo da Adivinha√ß√£o</h1>
  <p>Adivinhe o n√∫mero entre <strong>1 e 100</strong></p>

  <input type="number" id="palpite" placeholder="Digite seu palpite">

  <button onclick="verificar()">Tentar</button>
  <button onclick="reiniciar()">üîÑ Reiniciar</button>

  <div class="mensagem" id="mensagem"></div>
  <div class="tentativas" id="tentativas"></div>
</div>

<script>
  let numeroSecreto = Math.floor(Math.random() * 100) + 1;
  let tentativas = 0;

  function verificar() {
    const palpite = Number(document.getElementById("palpite").value);
    const mensagem = document.getElementById("mensagem");
    const tentativasEl = document.getElementById("tentativas");

    if (!palpite || palpite < 1 || palpite > 100) {
      mensagem.textContent = "‚ùå Digite um n√∫mero entre 1 e 100.";
      return;
    }

    tentativas++;

    if (palpite === numeroSecreto) {
      mensagem.textContent = "üéâ Parab√©ns! Voc√™ acertou!";
      tentativasEl.textContent = `Tentativas: ${tentativas}`;
    } else if (palpite < numeroSecreto) {
      mensagem.textContent = "üìà O n√∫mero √© MAIOR";
      tentativasEl.textContent = `Tentativas: ${tentativas}`;
    } else {
      mensagem.textContent = "üìâ O n√∫mero √© MENOR";
      tentativasEl.textContent = `Tentativas: ${tentativas}`;
    }
  }

  function reiniciar() {
    numeroSecreto = Math.floor(Math.random() * 100) + 1;
    tentativas = 0;
    document.getElementById("palpite").value = "";
    document.getElementById("mensagem").textContent = "";
    document.getElementById("tentativas").textContent = "";
  }
</script>

